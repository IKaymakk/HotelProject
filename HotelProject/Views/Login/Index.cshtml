@{
    Layout = "_LoginLayout";
}

<div class="card card-primary">
    <div class="card-header"><h4>Giriş</h4></div>

    <div class="card-body">
        <form id="loginForm" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" type="email" class="form-control" name="Email" required autofocus>
                <div class="invalid-feedback">Lütfen e-posta adresinizi girin.</div>
            </div>

            <div class="form-group">
                <label for="password" class="control-label">Şifre</label>
                <input id="password" type="password" class="form-control" name="Password" required>
                <div class="invalid-feedback">Lütfen şifrenizi girin.</div>
            </div>

            <div class="form-group custom-control custom-checkbox">
                <input type="checkbox" name="RememberMe" class="custom-control-input" id="remember-me">
                <label class="custom-control-label" for="remember-me">Beni Hatırla</label>
            </div>

            <div class="form-group">
                <button type="button" onclick="Login()" class="btn btn-primary btn-lg btn-block">Giriş</button>
            </div>

            <div id="errorMessage" class="alert alert-danger d-none"></div>
        </form>
    </div>
</div>

