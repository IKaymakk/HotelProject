@using EntityLayer.Entities
@{
    Layout = "_AdminLayout";
}
@model List<Room>


<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div id="output-status"></div>
            <div class="row">
                <div class="col-md-12">

                    <div class="card" id="settings-card">

                        <div class="card-body">


                            <div class="form-group row align-items-center">

                                <div class="card-header ">
                                    <h4 style="padding-left:18px;">Oda Seç:</h4>
                                    <div class="col-sm-6 col-md-3">
                                        <select style="margin-left:23px;" name="roomNumber" class="form-control" id="roomNumber">
                                            @foreach (var item in Model ?? Enumerable.Empty<Room>())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }

                                        </select>
                                    </div>
                                    <button onclick="openRoomModal()" style="margin-left:750px;" class="btn btn-primary" id="save-btn">Oda Ekle</button>

                                </div>
                                
                            </div>



                            <div class="form-group row align-items-center col-12">
                                <div class="card-header ">
                                    <h4>Oda Fiyatı:</h4>
                                    <input style="margin-left:25px; margin-right:40px;" type="text" name="site_title" class="form-control col-4" id="site-title">
                                    <button class="btn btn-primary col-4" id="save-btn">Fiyatı Güncelle</button>

                                </div>


                            </div>
                            <div class="form-group row align-items-center col-12">
                                <div class="card-header ">
                                    <h4>Oda Özelliği Ekle:</h4>
                                    <button class="btn btn-primary" onclick="openEditModal()" style="margin-left:26px;">Özellik Ekle</button>

                                </div>
                                <div class="modal fade" id="myModal" role="dialog" style="display:none">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header" style="background-color: #6777ef; cursor: move;">
                                                <h5 id="modalTitle" style="color: white; margin: 0; flex: 1;"></h5>
                                            </div>
                                            <div class="modal-body" id="Body"></div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" onclick="closeModal()">Kapat</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="form-group row align-items-center">
                                <div class="card-header ">
                                    <h4 style="margin-left:14px;">Oda Resimleri:</h4>
                                    <button class="btn btn-primary" onclick="openPictureModal()" style="margin-left:12px;">Resim Ekle</button>

                                </div>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="~/images/attractions/img-1.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="~/images/avatar/img-5.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image3.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="~/images/about/img-1.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image5.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image6.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image7.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image8.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image9.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image10.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image11.jpg" class="img-fluid">
                                        </div>
                                        <div class="col-sm-4 col-md-3 col-lg-2 mb-4">
                                            <img src="image12.jpg" class="img-fluid">
                                        </div>
                                    </div>
                                </div>

                            </div>



                        </div>
                        <div class="card-footer bg-whitesmoke text-md-right">
                            <button class="btn btn-primary" id="save-btn">Save Changes</button>
                            <button class="btn btn-secondary" type="button">Reset</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
<script>
    document.getElementById("site-logo").addEventListener("change", function () {
        var fileLabel = document.getElementById("file-label");
        var files = this.files;
        if (files.length > 0) {
            var fileNames = Array.from(files).map(file => file.name).join(", ");
            fileLabel.innerText = fileNames;
        } else {
            fileLabel.innerText = "Choose Files";
        }
    });
</script>