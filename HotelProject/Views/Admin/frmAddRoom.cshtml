@using EntityLayer.Entities

@{
    Layout = null;
}
@model List<RoomCategory>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="roomName" class="form-label">Oda Numarası:</label>
            <input type="text" name="roomName" class="form-control" id="roomName">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="roomPrice" class="form-label">Oda Fiyatı:</label>
            <input type="text" name="roomPrice" class="form-control" id="roomPrice">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="capacity" class="form-label">Kapasite:</label>
            <input type="text" name="capacity" class="form-control" id="capacity">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="category" class="form-label">Kategori:</label>
            <select name="category" class="form-control" id="category">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="description" class="form-label">Açıklama:</label>
            <textarea type="text" name="description" class="form-control" id="description" rows="5"></textarea>
        </div>
    </div>

</div>



<div class="form-group row d-flex align-items-center">
    <label class="form-label">Popüler Oda Mı?</label>

        <input type="checkbox" name="roomPrice" class="form-check-input" id="roomPrice">
 
</div>



<div class="modal-footer">
    <div class="col-sm-6 offset-sm-3">
        <button style="    position: absolute;
    margin-left: 282px;
    margin-block: -16px;" class="btn btn-primary" onclick="insertRoom()" id="save-btn">
            Ekle
        </button>
    </div>
    <button type="button" class="btn btn-danger" onclick="closeModal()">Kapat</button>
</div>


